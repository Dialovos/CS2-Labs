<Window x:Class="WPF_GreetingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GreetingApp"
        mc:Ignorable="d"
        Title="WPF Greeting App" Height="250" Width="400">
    <StackPanel Margin="20">

        <TextBlock Text="Enter Your Name:" Margin="0,0,0,10"/>

        <TextBox Name="NameTextBox" Margin="0,0,0,10"/>

        <Button Content="Greet Me" Click="GreetMeButton_Click" Margin="0,0,0,10" Padding="10,5"/>

        <TextBlock Name="GreetingTextBlock" FontSize="16" FontWeight="Bold"/>

    </StackPanel>
</Window>